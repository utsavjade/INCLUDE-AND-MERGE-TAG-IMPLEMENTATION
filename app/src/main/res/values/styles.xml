<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextAndTextViewStyle">
        <item name="android:textSize">@dimen/style_layout_text_size</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="ButtonStyle" parent="EditTextAndTextViewStyle">
        <item name="android:background">@color/black</item>
    </style>
    <style name="TextStyleBold" parent="EditTextAndTextViewStyle">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditTextStyleRightToLeft" parent="EditTextAndTextViewStyle">
        <item name="android:textDirection">rtl</item>
    </style>
</resources>
